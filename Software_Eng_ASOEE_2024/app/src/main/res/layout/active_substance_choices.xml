<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/creating_prescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page_background_colour"
    tools:context=".views.PrescriptionCreation.Creation.PrescriptionCreationActivity">

    <ImageView
        android:id="@+id/eopyy_image_login"
        android:layout_width="170dp"
        android:layout_height="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        app:srcCompat="@drawable/eopyy_logo_1" />

    <TextView
        android:id="@+id/active_substance_edit_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Edit Active Substances"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eopyy_image_login"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/new_active_substance_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Active Substance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/active_substance_edit_txt"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/edit_active_substance_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change an Active Substance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_active_substance_btn"
        app:layout_constraintVertical_bias="0.05" />
    <Button
        android:id="@+id/delete_active_substance_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Active Substance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_active_substance_btn"
        app:layout_constraintVertical_bias="0.05" />
</androidx.constraintlayout.widget.ConstraintLayout>