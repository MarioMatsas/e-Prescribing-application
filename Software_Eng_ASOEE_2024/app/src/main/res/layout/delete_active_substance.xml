<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/delete_active_substance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page_background_colour"
    tools:context=".views.ActiveSubstanceEdit.Deletion.ActiveSubstanceDeleteActivity">

    <ImageView
        android:id="@+id/eopyy_image_login"
        android:layout_width="170dp"
        android:layout_height="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        app:srcCompat="@drawable/eopyy_logo_1" />

    <TextView
        android:id="@+id/delete_active_substance_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Delete Active Substance"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eopyy_image_login"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/delete_active_substance_spinner"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_active_substance_txt"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/delete_active_substance_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/delete_active_substance_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/delete_active_substance_name"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/delete_active_substance_name"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/login_outline_colour"
        android:enabled="false"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_active_substance_spinner"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/delete_active_substance_eqpm_txt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Expected Quantity Per Month"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/delete_active_substance_eqpm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/delete_active_substance_eqpm"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/delete_active_substance_eqpm"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/login_outline_colour"
        android:enabled="false"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_active_substance_name"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/delete_active_substance_btn"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:background="@drawable/login_button_colour"
        android:text="Delete"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <TextView
        android:id="@+id/delete_active_substance_output_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/delete_active_substance_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>