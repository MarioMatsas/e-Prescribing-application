<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/delete_pharmaceutical_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page_background_colour"
    tools:context=".views.PharmaceuticalProductEdit.Deletion.PharmaceuticalProductDeleteActivity">

    <ImageView
        android:id="@+id/eopyy_image_login"
        android:layout_width="182dp"
        android:layout_height="159dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231"
        app:srcCompat="@drawable/eopyy_logo_1" />

    <TextView
        android:id="@+id/delete_pharmaceutical_product_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Delete Pharmaceutical Product"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.427" />

    <Spinner
        android:id="@+id/delete_pharmaceutical_product_spinner"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_pharmaceutical_product_txt"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/delete_pharmaceutical_product_button_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active Substances"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintBottom_toTopOf="@+id/delete_pharmaceutical_product_ac_list"
        app:layout_constraintEnd_toEndOf="@+id/delete_pharmaceutical_product_ac_list"
        app:layout_constraintStart_toStartOf="@+id/delete_pharmaceutical_product_ac_list" />

    <Button
        android:id="@+id/delete_pharmaceutical_product_btn"
        android:layout_width="298dp"
        android:layout_height="46dp"
        android:background="@drawable/login_button_colour"
        android:text="Delete Pharmaceutical Product"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_pharmaceutical_product_info"
        app:layout_constraintVertical_bias="0.195" />

    <EditText
        android:id="@+id/delete_pharmaceutical_product_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_outline_colour"
        android:hint="Name"
        android:inputType="text"
        android:textColor="#000000"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_pharmaceutical_product_spinner"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/delete_pharmaceutical_product_price"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_outline_colour"
        android:hint="Retail Price"
        android:inputType="number"
        android:textColor="#000000"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/delete_pharmaceutical_product_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/delete_pharmaceutical_product_name"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/delete_pharmaceutical_product_form"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_outline_colour"
        android:hint="Form"
        android:inputType="number"
        android:textColor="#000000"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_pharmaceutical_product_name"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/delete_pharmaceutical_product_type"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_outline_colour"
        android:hint="Type"
        android:inputType="number"
        android:textColor="#000000"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/delete_pharmaceutical_product_form"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/delete_pharmaceutical_product_form"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/delete_pharmaceutical_product_output_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/delete_pharmaceutical_product_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_pharmaceutical_product_info"
        app:layout_constraintVertical_bias="0.7" />

    <EditText
        android:id="@+id/delete_pharmaceutical_product_info"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_outline_colour"
        android:enabled="false"
        android:hint="Extra info(e.g.num of pills)"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_pharmaceutical_product_form"
        app:layout_constraintVertical_bias="0.072" />

    <ListView
        android:id="@+id/delete_pharmaceutical_product_ac_list"
        android:layout_width="341dp"
        android:layout_height="86dp"
        android:background="@drawable/login_outline_colour"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_pharmaceutical_product_btn"
        app:layout_constraintVertical_bias="0.709" />

</androidx.constraintlayout.widget.ConstraintLayout>